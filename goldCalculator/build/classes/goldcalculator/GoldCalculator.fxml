<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="goldcalculator.GoldCalculatorController">
    <children>
        <!-- Gold Karat and Weight Input -->
        <Label layoutX="19.0" layoutY="86.0" text="Enter Gold Karat:" />
        <TextField fx:id="karatField" layoutX="204.0" layoutY="78.0" prefHeight="25.0" prefWidth="224.0" />
        
        <Label layoutX="19.0" layoutY="126.0" text="Enter Gold Weight (grams):" />
        <TextField fx:id="weightField" layoutX="204.0" layoutY="118.0" prefHeight="25.0" prefWidth="224.0" />
        
        <!-- Buttons -->
        <Button fx:id="calculateButton" layoutX="19.0" layoutY="176.0" onAction="#calculatePrice" prefHeight="33.0" prefWidth="187.0" text="Calculate" />
        <Button fx:id="clearButton" layoutX="214.0" layoutY="176.0" onAction="#clearFields" prefHeight="33.0" prefWidth="211.0" text="Clear" />
        
        <!-- Result Labels -->
        <Label fx:id="resultLabel" layoutX="19.0" layoutY="223.0" text="Total Price:" />
        <Label fx:id="thankYouLabel" layoutX="19.0" layoutY="256.0" />
        
        <!-- Sell Button -->
        <Button fx:id="sellButton" layoutX="19.0" layoutY="290.0" onAction="#sellGold" prefHeight="33.0" prefWidth="406.0" text="Confirm Sell" />

        <!-- ListView to display sale details -->
        <ListView fx:id="salesListView" layoutX="19.0" layoutY="340.0" prefHeight="100.0" prefWidth="406.0" />

        <!-- Export Button -->
        <Button fx:id="exportButton" layoutX="19.0" layoutY="460.0" onAction="#exportSales" prefHeight="33.0" prefWidth="406.0" text="Export Sales" />
        
        <!-- Application Title -->
        <HBox alignment="CENTER" layoutX="13.0" layoutY="10.0" prefHeight="54.0" prefWidth="418.0" style="-fx-background-color: gold;">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Gold Calculator App" />
            </children>
        </HBox>
    </children>
</AnchorPane>
